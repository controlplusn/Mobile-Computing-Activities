<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:text="Welcome to"
            android:textSize="30dp"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Mobile Computing"
            android:textSize="30dp"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="30dp"
            android:text="Activities"
            android:textColor="@color/textColor"
            android:textSize="30dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/MoveToAct1"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="25dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="177dp"
                    android:layout_height="118dp"
                    android:layout_margin="15dp"
                    android:padding="5dp"
                    android:src="@drawable/helloworld" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_black"
                    android:text="Activity 1"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />
            </LinearLayout>

            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/MoveToAct2"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="25dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="177dp"
                    android:layout_height="118dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/registered" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_black"
                    android:text="Activity 2"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/MoveToAct3"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="25dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="177dp"
                    android:layout_height="118dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/login" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_black"
                    android:text="Activity 3"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/MoveToAct4"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="25dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="177dp"
                    android:layout_height="118dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/calculator" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_black"
                    android:text="Activity 4"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/MoveToAct5"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="25dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="177dp"
                    android:layout_height="118dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/infracom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_black"
                    android:text="Activity 5"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/MoveToAct6"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="25dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="177dp"
                    android:layout_height="118dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/bluetooth" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_black"
                    android:text="Activity 6"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</ScrollView>

